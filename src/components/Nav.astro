---
// library imports
import { Icon } from 'astro-icon';

// component imports
import Link from './Link.astro';

// data imports
import navData from '../data/navData.js';
---
<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logomark" aria-label="Go home">
      <Icon name="reblog" width="40" />
    </a>
    <ul>
      {navData.map((item) => 
        <Link text={item.name} href={item.href} style="secondary" isFilled={false} data-navlink/>
      )}
    </ul>
  </div>
</nav>

<script>
  import "../scripts/nav.js";
</script>